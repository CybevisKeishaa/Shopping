<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>productSearch</servlet-name>
        <servlet-class>product_controller.productSearch</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>productList</servlet-name>
        <servlet-class>product_controller.productList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>blogDetail</servlet-name>
        <servlet-class>blogController.blogDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>blogList</servlet-name>
        <servlet-class>blogController.blogList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>blogSearch</servlet-name>
        <servlet-class>blogController.blogSearch</servlet-class>
    </servlet>

    <!-- Servlets from second section -->
    <servlet>
        <servlet-name>HomeSliderServlet</servlet-name>
        <servlet-class>controller.home.HomePageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.account.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerificationEmail</servlet-name>
        <servlet-class>controller.account.VerificationEmail</servlet-class>
    </servlet>

    <!-- Mappings from first section -->
    <servlet-mapping>
        <servlet-name>productSearch</servlet-name>
        <url-pattern>/productSearch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productList</servlet-name>
        <url-pattern>/productList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>blogDetail</servlet-name>
        <url-pattern>/blogDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>blogList</servlet-name>
        <url-pattern>/blogList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>blogSearch</servlet-name>
        <url-pattern>/blogSearch</url-pattern>
    </servlet-mapping>

    <!-- Mappings from second section -->
    <servlet-mapping>
        <servlet-name>HomeSliderServlet</servlet-name>
        <url-pattern>/homepage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/account/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerificationEmail</servlet-name>
        <url-pattern>/VerificationActive</url-pattern>
    </servlet-mapping>

    <!-- Welcome file -->
    <welcome-file-list>
        <welcome-file>view/home/page.jsp</welcome-file>
    </welcome-file-list>
</web-app>
